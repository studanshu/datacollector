<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.streamsets</groupId>
    <artifactId>streamsets-datacollector-root-lib</artifactId>
    <version>1.6.0.0-SNAPSHOT</version>
    <relativePath>../root-lib</relativePath>
  </parent>
  <groupId>com.streamsets</groupId>
  <artifactId>streamsets-datacollector-cdh_5_2-lib</artifactId>
  <version>1.6.0.0-SNAPSHOT</version>
  <description>StreamSets Data Collector CDH 5.2.8 Lib</description>
  <name>StreamSets Data Collector CDH 5.2.8 Lib</name>
  <packaging>jar</packaging>

  <properties>
    <hadoop.version>2.5.0-cdh5.2.8</hadoop.version>
    <hbase.version>0.98.6-cdh5.2.8</hbase.version>
    <solr.version>4.4.0-cdh5.2.8</solr.version>
    <solr.test.jetty.version>8.1.10.v20130312</solr.test.jetty.version>
    <flume.version>1.5.0-cdh5.2.8</flume.version>
    <thrift.version>0.9.0-cdh5-3</thrift.version>
    <avro.version>1.7.7</avro.version>
  </properties>

  <repositories>
    <repository>
      <id>cdh.repo</id>
      <url>https://repository.cloudera.com/content/groups/cloudera-repos</url>
      <name>Cloudera Repositories</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <dependencies>

    <!--Dependency for Solr Unit Tests to override SDC Jetty Artifacts -->
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-continuation</artifactId>
      <version>${solr.test.jetty.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-deploy</artifactId>
      <version>${solr.test.jetty.version}</version>
